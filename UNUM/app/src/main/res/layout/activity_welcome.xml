<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_photo"
    android:orientation="vertical"
    tools:context="la.unum.unum.views.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120sp"
            android:src="@drawable/welcome_title" />

        <Button
            android:layout_width="260sp"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230sp"
            android:background="@drawable/button_color"
            android:text="CONNECT INSTAGRAM"
            android:textColor="@drawable/text_color"
            android:onClick="connect_Instagram"/>

        <ImageView
            android:layout_width="90sp"
            android:layout_height="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6sp"
            android:src="@drawable/welcome_secure_login" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0sp"
        android:background="@drawable/welcome_bottom_button_back"
        android:gravity="center"
        android:text="By logging in, you agree to our Privacy Policy and Terms of Service."
        android:textColor="@android:color/white" />
</RelativeLayout>
